    <script>
        function calcular() {
            const valorFOB = parseFloat(document.getElementById('valorFOB').value) || 0;
            const fleteInternacional = parseFloat(document.getElementById('fleteInternacional').value) || 0;
            const unidades = parseInt(document.getElementById('unidades').value) || 1;
            const derechoImportacion = parseFloat(document.getElementById('derechoImportacion').value) || 0;
            const tasaEstadistica = parseFloat(document.getElementById('tasaEstadistica').value) || 3;
            const iva = parseFloat(document.getElementById('iva').value) || 21;
            const gastosGestion = parseFloat(document.getElementById('gastosGestion').value) || 70;

            if (valorFOB <= 0) {
                alert('Por favor, ingresá un valor FOB válido');
                return;
            }

            const valorCIF = valorFOB + fleteInternacional;
            
            const montoDerechoImportacion = valorCIF * (derechoImportacion / 100);
            
            const montoTasaEstadistica = valorCIF * (tasaEstadistica / 100);
            
            const baseImponibleIVA = valorCIF + montoDerechoImportacion + montoTasaEstadistica;
            
            const montoIVA = baseImponibleIVA * (iva / 100);
            
            const costoTotal = valorCIF + montoDerechoImportacion + montoTasaEstadistica + montoIVA + gastosGestion;
            
            const costoUnitario = costoTotal / unidades;

            document.getElementById('resFOB').textContent = formatCurrency(valorFOB);
            document.getElementById('resFlete').textContent = formatCurrency(fleteInternacional);
            document.getElementById('resCIF').textContent = formatCurrency(valorCIF);
            document.getElementById('resDerecho').textContent = formatCurrency(montoDerechoImportacion) + ' (' + derechoImportacion + '%)';
            document.getElementById('resEstadistica').textContent = formatCurrency(montoTasaEstadistica) + ' (' + tasaEstadistica + '%)';
            document.getElementById('resBaseIVA').textContent = formatCurrency(baseImponibleIVA);
            document.getElementById('resIVA').textContent = formatCurrency(montoIVA) + ' (' + iva + '%)';
            document.getElementById('resGestion').textContent = formatCurrency(gastosGestion);
            document.getElementById('resTotal').textContent = formatCurrency(costoTotal);
            document.getElementById('resUnidades').textContent = unidades;
            document.getElementById('resUnitario').textContent = formatCurrency(costoUnitario);

            document.getElementById('results').classList.add('show');
            
            document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        function formatCurrency(value) {
            return 'USD $' + value.toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,');
        }

        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    calcular();
                }
            });
        });
    </script>
</body>
